# Ghostty configuration optimized for tmux + zsh + agent development

# Theme - Solarized Dark (matches your tmux)
theme = solarized-dark

# Font configuration (for Powerlevel10k)
font-family = "MesloLGS NF"
font-size = 14

# Window appearance
window-opacity = 0.95
window-padding-x = 8
window-padding-y = 8
window-decoration = true

# Shell - keep default shell integration
shell-integration = detect

# Performance
macos-non-native-fullscreen = false
macos-titlebar-style = native

# Scrollback
scrollback-limit = 10000

# Mouse
mouse-hide-while-typing = true
copy-on-select = clipboard

# Cursor
cursor-style = block
cursor-style-blink = true

# Terminal behavior
term = xterm-256color
confirm-close-surface = false

# Clipboard
clipboard-read = allow
clipboard-write = allow

# Keybindings (macOS native style)
keybind = super+c=copy_to_clipboard
keybind = super+v=paste_from_clipboard
keybind = super+n=new_window
keybind = super+t=new_tab
keybind = super+w=close_surface
keybind = super+q=quit
keybind = super+shift+c=reload_config
keybind = super+plus=increase_font_size:1
keybind = super+minus=decrease_font_size:1
keybind = super+0=reset_font_size

# Tab bar
window-theme = auto
gtk-tabs-location = top

# Link handling
command+click = open

# Advanced
quick-terminal-animation-duration = 0.1
